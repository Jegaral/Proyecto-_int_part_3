import os

def clear_terminal():
    os.system('cls' if os.name == 'nt' else 'clear')

def main():
    number = 0
    while number <= 50:
        # Espera a que el usuario presione la tecla 'n'
        input("Presiona 'n' y luego Enter para continuar...")
        
        clear_terminal()  # Borra la terminal
        
        print(f"Nuevo nÃºmero: {number}")
        number += 1

if __name__ == "__main__":
    main()
